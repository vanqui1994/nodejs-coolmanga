<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ../layout/head %>
    </head>
    <body>
        <section id="container" >
            <%- include ../layout/header %>
            <%- include ../layout/sidebar %>
            <!--main content start-->
            <section id="main-content">
                <section class="wrapper site-min-height">
                    <%if(message && message.error){%>
                    <div class="alert alert-block alert-danger fade in">
                        <button class="close close-sm" type="button" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4><i class="fa fa-times-sign"></i> Lỗi!</h4>
                        <p><%= message.error %></p>
                    </div>
                    <%}%>
                    <%if(message && message.success){%>
                    <div class="alert alert-success alert-block fade in">
                        <button class="close close-sm" type="button" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4><i class="fa fa-ok-sign"></i> Hoàn tất!</h4>
                        <p><%= message.success %></p>
                    </div>
                    <%}%>
                    <div class="row">
                        <div class="col-lg-12">
                            <section class="panel panel-primary">
                                <header class="panel-heading">Cập nhật thông tin website</header>
                                <div class="panel-body">
                                    <form id="frm" class="form-horizontal tasi-form" role="form" action="/admin/config" method="POST">
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="email">Email <span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <input type="text" name="email" id="email" class="form-control" placeholder="Nhập email" maxlength="255" value="<%= data.config_email%>"/>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="title">Tiêu đề  <span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <input type="text" class="form-control" name="configTitle" placeholder="Nhập tiêu đề website" value="<%= data.config_title%>"/>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="type">Thông tin Footer <span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <input type="text" class="form-control" name="configFooter" placeholder="Nhập thông tin Footer" value="<%= data.config_footer%>"/>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="type">FanPage Facebook<span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <input type="text" class="form-control" name="configFanPage" placeholder="Nhập code FanPage" value="<%= data.config_fanpage%>"/>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="type">Mô tả website  <span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control" name="configSummary"><%= data.config_summary%></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label" for="logoImage">Logo web <span style="color:red">*</span></label>
                                            <div class="col-lg-10">
                                                <div id="avatar_upload">
                                                    <input type="file" name="logoImage" id="logoImage" class="ignore"/>
                                                </div>
                                                <div id="progress"></div>
                                                <ul class="logoImageList">
                                                    <% if(data.config_logo){%>
                                                        <%JSON.parse(data.config_logo).forEach(function(val) { %>
                                                        <li class="bannersImage" style="background: none repeat scroll 0 0 #FFFFFF;border: 1px solid #DDDDDD;border-radius: 2px 2px 2px 2px;box-shadow: 1px 1px 2px #EEEEEE;float: left;margin: 0 5px 5px 0;padding: 5px;list-style:none outside none;margin-bottom:10px;display:inline;">
                                                            <img class="image" style="display: block;margin-bottom: 10px;width:116px;height:100px" alt="" src="<%=val.image%>">
                                                            <span style="display: block;text-align: right;">
                                                                <a class="view" style="vertical-align: middle;cursor: pointer;display: inline-block;height: 16px;margin-left: 5px;opacity: 0.5;vertical-align: middle;width: 16px;background-image: url(data:image/png;base64,);"
                                                                   target="_blank" href="<%=val.image%>" title="Xem"></a>
                                                                <a class="delete" style="vertical-align: middle;cursor: pointer;display: inline-block;height: 16px;margin-left: 5px;opacity: 0.5;vertical-align: middle;width: 16px;background-image: url(data:image/png;base64,);" title="Xóa"></a>
                                                            </span>
                                                            <div class="jsonData">
                                                                <input type="hidden" name="logoImage" value="<%=val.image%>" />
                                                            </div>
                                                        </li>
                                                        <%});%>
                                                    <%}%>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button type="submit" class="btn btn-info">Hoàn tất</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </section>
                        </div>
                    </div>
                </section>

                <div style="width: 0; height: 0; overflow: hidden;" id="banners_image_upload"></div>

                <!--main content end-->
                <%- include ../layout/footer %>
            </section>
            <%- include ../layout/script %>
            <script src="/static/admin/js/lib/Nileupload.js"></script>
            <script src="/static/admin/js/lib/jquery.validate.min.js"></script>
            <script src="/static/admin/js/my/config.js"></script>
    </body>
</html>
