<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ../layout/head %>
    </head>
    <body>
        <section id="container" >
            <%- include ../layout/header %>
            <%- include ../layout/sidebar %>
            <!--main content start-->
            <section id="main-content">
                <section class="wrapper site-min-height">
                    <div class="row">
                        <div class="col-lg-12">
                            <section class="panel panel-primary">
                                <header class="panel-heading">
                                    Danh sách Thể loại
                                    <button type="button" class="btn btn-success pull-right" id="btnToggleFilterOrder" style="margin:-6px -11px 0 0;">Ẩn/Hiện công cụ tìm kiếm</button>
                                </header>
                                <div class="panel-body" id="frmFilterVehicleTrip" style="">
                                    <div id="frmFilterOrder" class="panel-body" style="<%= (params.isFilter == 1)?'display:block;':'display:none;' %>">
                                        <form method="GET">
                                            <input type="hidden" id="isFilter" name="isFilter" value="1"/>
                                            <table class="table table-bordered table-condensed cf">
                                                <tbody>
                                                    <tr>
                                                        <td class="col-sm-1" style="font-weight:600;">Tên thể loại</td>
                                                        <td class="col-sm-5" style="font-weight:600;">
                                                            <input id="orderID" type="text" name="title" class="form-control orderFilter" placeholder="Nhập tên thể loại" value="<%= (params.title)?params.title:''%>">
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <a  href="/admin/category" class="btn btn-danger">Bỏ tìm kiếm</a>
                                            <button type="submit" class="btn btn-info">Tìm kiếm</button>
                                        </form>

                                    </div>
                                    <button type="button" class="btn btn-warning showBtn" id="btnDelAll" style="display: none">Xóa tất cả</button>
                                    <hr class="showBtn" style="display: none"/>

                                    <table class="table table-bordered table-condensed table-striped cf">
                                        <thead class="cf">
                                            <th class="text-center" style="width: 3%">
                                                <input type="checkbox" name="listID" value="" id="selectAllItem">
                                            </th>
                                            <th class="text-center">ID</th>
                                            <th class="text-center">Tên thể loại</th>
                                            <th class="text-center">Tên tối ưu</th>
                                            <th class="text-center">Chức năng</th>
                                        </thead>
                                        <tbody>
                                            <% if(data){%>
                                                <% data.forEach(function(el, index) { %>
                                                <tr>
                                                    <td class="text-center">
                                                        <input type="checkbox" name="listID" class="listID" value="<%= el.category_id%>">
                                                    </td>
                                                    <td class="text-center">
                                                        <%= el.category_id%>
                                                    </td>
                                                    <td class="text-center">
                                                        <b><%= el.category_title%></b>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= el.category_slug%>
                                                    </td>
                                                    <td class="text-center">
                                                        <a href="" class="btn btn-info fa fa-pencil action tooltips" data-placement="top" data-original-title="Chỉnh sửa thể loại"></a>
                                                        <button type="button" class="btn btn-danger fa fa-trash action tooltips btnDel" data-id="<%= el.category_id%>" data-placement="top" data-original-title="Xóa thể loại"></button>
                                                    </td>
                                                </tr>
                                                <%})%>
                                            <%}else{%>
                                            <tr>
                                                <td colspan="5" class="text-center">Hiện tại chưa có dữ liệu</td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                    <div class="text-center">
                                        <%- paging %>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </section>

                <%- include ../layout/footer %>
            </section>
            <%- include ../layout/script %>
            <script src="/static/admin/js/my/category.js"></script>
            <script>
                Category.index();
            </script>
    </body>
</html>
