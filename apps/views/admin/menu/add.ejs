<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ../layout/head %>
        <link href="/static/admin/css/jstree/style.css" rel="stylesheet" />
    </head>
    <body>
        <section id="container" >
            <%- include ../layout/header %>
            <%- include ../layout/sidebar %>
            <!--main content start-->
            <section id="main-content">
                <section class="wrapper site-min-height">
                    <%if(message && message.error){%>
                    <div class="alert alert-block alert-danger fade in">
                        <button class="close close-sm" type="button" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4><i class="fa fa-times-sign"></i> Lỗi!</h4>
                        <p><%= message.error %></p>
                    </div>
                    <%}%>
                    <%if(message && message.success){%>
                    <div class="alert alert-success alert-block fade in">
                        <button class="close close-sm" type="button" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4><i class="fa fa-ok-sign"></i> Hoàn tất!</h4>
                        <p><%= message.success %></p>
                    </div>
                    <%}%>
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/admin/menu/add" method="POST" id="frm" class="form-horizontal tasi-form">
                                <aside class="col-lg-4">
                                    <section class="panel panel-primary">
                                        <header class="panel-heading">
                                            <b>Cây danh mục</b>
                                        </header>
                                        <div class="panel-body">
                                            <section id="flip-scroll">
                                                <div class="tree-container clearfix grid-content" style="overflow: hidden;">
                                                    <div class="tree-header">
                                                        <div class="tree-function form-group">
                                                            &nbsp;&nbsp;<a href="javascript:void(0)" onclick="$('#catalog-tree').jstree('close_all');">&nbsp;&nbsp;Thu gọn</a> | <a href="javascript:void(0)" onclick="$('#catalog-tree').jstree('open_all');" >&nbsp;Mở rộng</a> 
                                                        </div>
                                                        <span class="root-cat">
                                                            &nbsp;&nbsp;<input type="radio" name="parentID" value="0" checked=""><a href="javascript:void(0)" id="root-cat">&nbsp;&nbsp;Danh mục chính</a>
                                                        </span>
                                                    </div>
                                                    <div class="clear"></div>
                                                    <div id="catalog-tree">
                                                        jsTree init here 
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </section>                                  
                                </aside>
                                <aside class="col-lg-8">
                                    <section class="panel panel-primary">
                                        <header class="panel-heading">
                                            <b>Thêm menu</b>
                                        </header>
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="menuName">Tên menu <span style="color:red">*</span></label>
                                                <div class="col-lg-10">
                                                    <input type="text" name="menuName" id="menuName" class="form-control" placeholder="Nhập tên menu" maxlength="255" value=""/>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="menuTarget">Mở tab mới </label>
                                                <div class="col-lg-10">
                                                    <input type="checkbox" name="menuTarget" id="menuTarget">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-offset-2 col-lg-10">
                                                    <button type="submit" class="btn btn-info">Hoàn tất</button>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </aside>
                            </form>
                        </div>
                    </div>
                </section>
                <%- include ../layout/footer %>
            </section>
            <%- include ../layout/script %>
            <script src="/static/admin/js/lib/jquery.validate.min.js"></script>
            <script src="/static/admin/js/lib/jquery.jstree.js"></script>
            <script src="/static/admin/js/my/menu.js"></script>
            <script>
                Menu.add();
            </script>
    </body>
</html>
